{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	],
	"settings": {
		"layout": {
			"contentSize": "1320px"
		},
		"color": {
			"defaultPalette": false,
			"palette": [
				{
					"name": "Black",
					"slug": "black",
					"color": "#222"
				},
				{
					"name": "White",
					"slug": "white",
					"color": "#FFF"
				},
				{
					"name": "Red",
					"slug": "primary",
					"color": "#F00"
				},
				{
					"name": "Green",
					"slug": "secondary",
					"color": "#0F0"
				},
				{
					"name": "Blue",
					"slug": "tertiary",
					"color": "#00F"
				}
			]
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"customSpacingSize": false,
			"spacingSizes": [
				{
					"name": "Small",
					"slug": "small",
					"size": "15px"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "30px"
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "50px"
